<div class="thumbnail">

  <%= wicked_pdf_image_tag  @ad.picture.url(:large), class: "img-responsive" %>
  <div class="caption-full">

    <% if @ad.active? %>
      <% if member_signed_in? %>
        <div class="text-right">
          <%= form_tag(checkout_payments_path) do %>
            <%= hidden_field_tag :ad_id, @ad.id %>
            <%= submit_tag "Comprar", class: "btn btn-primary", data: {confirm: "Deseja realmente comprar esse produto?"} %>
          <% end %>
        </div>
      <% else %>
        <div class="text-right">
          <%= link_to "Efetue login para Comprar", new_member_session_path, class: "btn btn-success" %>
        </div>
      <% end %>
    <% else %>
      <div class="text-right">
        <%= link_to "#{@ad.status_i18n}", '#', class: "btn btn-success", disabled: true %>
      </div>
    <% end %>

    <h4 class="pull-right"><%= humanized_money_with_symbol @ad.price %></h4>

    <h4><%= @ad.title %></h4>
    <p>
      <%= @ad.description.html_safe %>
    </p>
  </div>

</div>

