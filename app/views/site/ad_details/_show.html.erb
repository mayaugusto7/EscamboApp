<div class="thumbnail">

  <%= image_tag @ad.picture.url(:large), class: "img-responsive" %>
  <div class="caption-full">

    <% if @ad.active? %>
      <% if member_signed_in? %>
        <div class="text-right">
          <%= form_tag(checkout_payments_path) do %>
            <%= hidden_field_tag :ad_id, @ad.id %>
            <%= submit_tag "Comprar", class: "btn btn-primary", data: {confirm: "Deseja realmente comprar esse produto?"} %>
          <% end %>
        </div>
      <% else %>
        <div class="text-right">
          <%= link_to "Efetue login para Comprar", new_member_session_path, class: "btn btn-success" %>
        </div>
      <% end %>
    <% else %>
      <div class="text-right">
        <%= link_to "#{@ad.status_i18n}", '#', class: "btn btn-success", disabled: true %>
      </div>
    <% end %>

    <h4 class="pull-right"><%= humanized_money_with_symbol @ad.price %></h4>

    <h4><%= @ad.title %></h4>
    <p>
      <%= @ad.description.html_safe %>
      <%= link_to "Imprimir PDF", site_ad_detail_path(format: :pdf), class: "btn btn-info" %>
    </p>
  </div>

  <div class="well well-sm">
    <div class="ratings">
      <%= rating_for @ad, 'quality', star_path: '/images/ratyrate' %>
      <p class="pull-right"><%= @ad.rates('quality').count %>&nbsp;<%= t('labels.reviews') %></p>
      </p>
    </div>
  </div>

</div>

<div class="well">

  <% if member_signed_in? %>
    <div class="text-right">
      <button type="button" class="btn btn-success" data-toggle="modal" data-target="#commentModal">
        Deixe um coment√°rio
      </button>
    </div>
  <% else %>
    <div class="text-right">
      <%= link_to "Logar para comentar", new_member_session_path, class: "btn btn-success" %>
    </div>
  <% end %>

  <hr>

  <%= render partial: "site/ad_details/comments" %>

</div>

<%= render partial: "site/ad_details/comment_modal" %>