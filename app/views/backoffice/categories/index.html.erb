<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="page-header" >Categorias</h3>

    <div class="row">
      <div class="col-lg-12" align="right">
        <%= link_to new_backoffice_category_path, class: "btn btn-success" do %>
          <i class="fa fa-plus"></i> &nbsp;Novo
        <% end %>
      </div>
    </div>

  </div>

  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
          <th>#</th>
          <th>Descrição</th>
          <th style="width: 150px;">Ações</th>
        </tr>
        </thead>
        <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.description %></td>
            <td>
              <%= link_to edit_backoffice_category_path(category.id), class: "btn btn-warning btn-circle"  do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <button type="button" disabled="disabled" class="btn btn-danger btn-circle"><i class="fa fa-times"></i>
              </button>
            </td>
          </tr>
        <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>
